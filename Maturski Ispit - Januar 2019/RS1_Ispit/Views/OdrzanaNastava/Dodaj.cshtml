@using RS1_Ispit_asp.net_core.EntityModels
@model RS1_Ispit_asp.net_core.ViewModel.DodajMaturskiIspitVm
@{
    ViewData["Title"] = "Dodaj";
}

<nav class="mtd-1" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Početna</a></li>
        <li class="breadcrumb-item"><a asp-controller="OdrzanaNastava" asp-action="Index">Nastavnici</a></li>
        <li class="breadcrumb-item"><a asp-controller="OdrzanaNastava" asp-action="Odaberi" asp-route-id="@Model.NastavnikId">Maturski ispiti</a></li>
        <li class="breadcrumb-item active" aria-current="page">Novi maturski ispit</li>
    </ol>
</nav>

<h2 class="title">Novi maturski ispit</h2>
<form asp-action="Snimi" method="post" asp-antiforgery="true">


    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <h4>Nastavnik</h4>
                <h5>@Model.Nastavnik</h5>
                <input asp-for="Nastavnik" type="hidden" />
            </div>

            <div class="form-group">
                <h4>Aktuelna školska godina</h4>
                <h5>@Model.SkolskaGodina</h5>
                <input asp-for="SkolskaGodina" type="hidden" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Škola</label>
                <select asp-for="SkolaId" asp-items="@Model.Skole" class="form-control">
                    <option>Odaberite školu*</option>
                </select>
                <span asp-validation-for="SkolaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Datum maturskog ispita</label>
                <input asp-for="DatumIspita" class="form-control" type="date" />
                <span asp-validation-for="DatumIspita" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Predmet</label>
                <select asp-for="PredmetId" asp-items="@Model.Predmeti" class="form-control">
                    <option>Odaberite predmet*</option>
                </select>
                <span asp-validation-for="PredmetId" class="text-danger"></span>
            </div>
        </div>
    </div>

    <input type="hidden" asp-for="NastavnikId" readonly />
    <button type="submit" class="btn btn-success btn-block">Sačuvaj</button>
</form>